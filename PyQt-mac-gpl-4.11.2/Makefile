	@(cd QtCore; $(MAKE))
	@(cd QtGui; $(MAKE))
	@(cd QtHelp; $(MAKE))
	@(cd QtMultimedia; $(MAKE))
	@(cd QtNetwork; $(MAKE))
	@(cd QtDBus; $(MAKE))
	@(cd QtDeclarative; $(MAKE))
	@(cd QtScript; $(MAKE))
	@(cd QtScriptTools; $(MAKE))
	@(cd QtXml; $(MAKE))
	@(cd QtOpenGL; $(MAKE))
	@(cd QtSql; $(MAKE))
	@(cd QtSvg; $(MAKE))
	@(cd QtTest; $(MAKE))
	@(cd QtWebKit; $(MAKE))
	@(cd QtXmlPatterns; $(MAKE))
	@(cd QtDesigner; $(MAKE))
	@(cd Qt; $(MAKE))
	@(cd pyuic; $(MAKE))
	@(cd pylupdate; $(MAKE))
	@(cd pyrcc; $(MAKE))
	@(cd designer; $(MAKE))

install:
