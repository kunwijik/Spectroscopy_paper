	@(cd designer; $(MAKE) install)
	@test -d $(DESTDIR)/opt/local/Library/Frameworks/Python.framework/Versions/2.7/lib/python2.7/site-packages/PyQt4 || mkdir -p $(DESTDIR)/opt/local/Library/Frameworks/Python.framework/Versions/2.7/lib/python2.7/site-packages/PyQt4
	cp -f /Users/Kunwiji/Dropbox/Spectroscopy_paper/PyQt-mac-gpl-4.11.2/__init__.py $(DESTDIR)/opt/local/Library/Frameworks/Python.framework/Versions/2.7/lib/python2.7/site-packages/PyQt4/__init__.py
	cp -f pyqtconfig.py $(DESTDIR)/opt/local/Library/Frameworks/Python.framework/Versions/2.7/lib/python2.7/site-packages/PyQt4/pyqtconfig.py
	@test -d $(DESTDIR)/opt/local/share/qt4/qsci/api/python || mkdir -p $(DESTDIR)/opt/local/share/qt4/qsci/api/python
	cp -f PyQt4.api $(DESTDIR)/opt/local/share/qt4/qsci/api/python/PyQt4.api

